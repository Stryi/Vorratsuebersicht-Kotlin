<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".ArticleListActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/ArticleList_AppBar"
        app:title="@string/ArticleList_Title"
        app:titleTextColor="@color/Application_ActionBar_TextColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@color/Application_ActionBar_Background"
        app:navigationIconTint="@color/Application_ActionBar_TextColor"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:iconTint="@color/Application_ActionBar_TextColor"
        app:menu="@menu/article_list_menu"  />

    <FrameLayout
        android:id="@+id/ArticleList_FilterBanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/Application_InfoBackgroud"
        android:padding="5dp">
        <TextView
            android:id="@+id/ArticleList_Filter"
            android:textColor="@color/Text_Color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/ArticleList_FilterClear"
            android:src="@drawable/close_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:contentDescription="@string/ArticleList_SpecialFilterClose" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ArticleList_SelectCategory"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >
        <TextView
            android:id="@+id/ArticleList_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/Text_Color"
            android:text="@string/ArticleDetails_Category" />
        <Spinner
            android:id="@+id/ArticleList_Categories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_Color"
            android:background="@color/Application_Background2"
            android:padding="10dp" />
    </LinearLayout>

    <!-- ListView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ArticleList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/ArticleList_Footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@color/Text_Color" />

</LinearLayout>
