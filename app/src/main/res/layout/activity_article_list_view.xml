<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ArticleListView_Image"
        android:layout_width="74dp"
        android:layout_height="85dp"
        android:paddingTop="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:src="@drawable/photo_camera_24px"
        android:layout_marginEnd="8dp"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/ArticleListView_Image">

        <TextView
            android:id="@+id/ArticleListView_Heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ArticleListView_Option"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5"
            android:gravity="center"
            android:text="&#8942;"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ArticleListView_SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ArticleListView_Heading"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ArticleListView_IsInStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:src="@drawable/assignment_24px" />

        <TextView
            android:id="@+id/ArticleListView_StorageQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/ArticleListView_IsInStorage"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ArticleListView_OnShoppingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/ArticleListView_StorageQuantity"
            android:alpha="0.5"
            android:src="@drawable/shopping_cart_24px" />

        <TextView
            android:id="@+id/ArticleListView_ShoppingQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/ArticleListView_OnShoppingList"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ArticleListView_Notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ArticleListView_SubHeading"
            android:layout_toStartOf="@id/ArticleListView_ShoppingQuantity"
            android:text="Notizen"
            android:textSize="14sp" />


    </RelativeLayout>

</RelativeLayout>
